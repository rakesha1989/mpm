<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>D o b</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Image</th>
      <th>Director</th>
      <th>D i n</th>
      <th>Company</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.d_o_b %></td>
        <td><%= profile.email %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.image %></td>
        <td><%= profile.director %></td>
        <td><%= profile.d_i_n %></td>
        <td><%= profile.company_id %></td>
        <td><%= profile.employee_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

